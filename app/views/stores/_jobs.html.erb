<div class="row">
  <div class="col-md-12">
    <h3>Trabajos</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Título</th>
          <th>Descripción</th>
          <th>Inicio</th>
          <th>Término</th>
          <th>Estado</th>
          <th>Postulantes/</br>Seleccionado</th>
        </tr>
      </thead>
      <tbody>
        <% @jobs.each do |job| %>
          <% if job.persisted? %>
          <tr>
            <td><%= link_to job.title, store_job_path(@store, job) %></td>
            <td><%= truncate(job.body, {length: 30}) %></td>
            <td><%= job.start_date.strftime('%d/%m/%Y, %H:%M') %></td>
            <td><%= job.finish_date.strftime('%d/%m/%Y, %H:%M') %></td>
            <td><%= job.state %></td>
            <td><%= link_to "Postulantes", '#' %></td>
            <td><%= link_to "eliminar", store_job_path(@store, job), method: :delete, data: {confirm: "Estas seguro que deseas eliminar este trabajo"}  %></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
