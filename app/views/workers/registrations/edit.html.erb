<% provide(:title, "Editar cuenta") %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <h2>Editar mis datos</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :email, "Email" %>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Esperando confirmación para la cuenta: <%= resource.unconfirmed_email %></div>
      <% end %>

      <%= f.label :name, "Nombre" %>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>

      <%= f.label :last_name, "Apellido" %>
      <%= f.text_field :last_name, autofocus: true, class: "form-control" %>

      <%= f.label :rut, "RUT" %>
      <em>(ej: 24.987.321-7)</em>
      <%= f.text_field :rut, autofocus: true, class: "form-control" %>

      <%= f.label :birthdate, "Fecha de nacimiento" %>
      <em>(dd/mm/yyyy)</em>
      <%= f.text_field :birthdate, class: "form-control datepicker" %>

      <%= f.label :college, "Universidad / Instituto" %>
      <%= f.text_field :college, autofocus: true, class: "form-control" %>

      <%= f.label :career, "Carrera / Profesión" %>
      <%= f.text_field :career, autofocus: true, class: "form-control" %>

      <%= f.label :address, "Dirección" %>
      <em>(calle #número, comuna, ciudad)</em>
      <%= f.text_field :address, autofocus: true, class: "form-control" %>

      <%= f.label :password, "Contraseña" %> <i>(deja en blanco si no la quieres cambiar)</i>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>

      <%= f.label :password_confirmation, "Confirmar contraseña" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>

      <%= f.label :current_password, "Contraseña actual" %> <i>(necesitamos tu contraseña actual para confirmar los cambios)</i>
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>

      <%= f.submit "Actualizar", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h3 class="center">Cancelar cuenta</h3>
    <p>Insatisfecho? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Volver", worker_root_path %>
  </div>
</div>
