<% provide(:title, "Nuevo Usuario") %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <h2>Crea tu cuenta</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :name, "Nombre*" %>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>

      <%= f.label :last_name, "Apellido*" %>
      <%= f.text_field :last_name, autofocus: true, class: "form-control" %>

      <%= f.label :email, "Correo electrónico*" %>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>

      <%= f.label :password, "Contraseña*" %>
      <% if @minimum_password_length %>
      <em>(mínimo <%= @minimum_password_length %> caracteres)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>

      <%= f.label :password_confirmation, "Confirmar contraseña*" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>

      <%= f.submit "Crear Cuenta", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
