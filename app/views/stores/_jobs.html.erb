<div class="row">
  <div class="col-md-12">
    <h3>Trabajos</h3>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Título</th>
          <th>Descripción</th>
          <th>Fecha y Hora de Inicio</th>
          <th>Fecha y Hora de Término</th>
          <th>Estado</th>
          <th>Postulantes/Seleccionado</th>
          <th>Eliminar</th>
        </tr>
      </thead>
      <tbody>
        <% @jobs.each do |job| %>
          <% if job.persisted? %>
          <tr>
            <td><%= job.title %></td>
            <td><%= job.body %></td>
            <td><%= job.start_date %></td>
            <td><%= job.finish_date %></td>
            <td><%= job.state %></td>
            <td><%= link_to "Postulantes", '#' %></td>
            <td><%= link_to "eliminar", store_job_path(@store, job), method: :delete, data: {confirm: "Estas seguro que deseas eliminar este trabajo"}  %></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
